# AI Platform 환경변수 템플릿
# 사용법: cp .env.example .env 후 비밀번호 수정

# PostgreSQL - 비즈니스 DB (NPC, Dictionary, Master Data)
BIZ_POSTGRES_HOST=localhost
BIZ_POSTGRES_DB=maple
BIZ_POSTGRES_USER=admin
BIZ_POSTGRES_PASSWORD=changeme_postgres  # ⚠️ 수정 필요!
BIZ_POSTGRES_PORT=5432

# PostgreSQL - Ops DB (Langfuse 로그 전용)
OPS_POSTGRES_HOST=localhost
OPS_POSTGRES_DB=langfuse
OPS_POSTGRES_USER=langfuse
OPS_POSTGRES_PASSWORD=changeme_langfuse  # ⚠️ 수정 필요!
OPS_POSTGRES_PORT=5433

# Neo4j - Graph Database
NEO4J_HOST=localhost
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme_neo4j  # ⚠️ 수정 필요!

# Redis - Caching & Session
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis  # ⚠️ 수정 필요!
REDIS_DB=0
REDIS_AUTH=changeme_redis

# Milvus - Vector Database
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_METRIC_PORT=9092
MILVUS_COLLECTION_NAME=documents
MILVUS_DIMENSION=384

# etcd (Milvus 의존성)
ETCD_PORT=2379

# MinIO (Milvus Storage)
MINIO_MILVUS_USER=minioadmin
MINIO_MILVUS_PASSWORD=changeme_minio  # ⚠️ 수정 필요!
MINIO_MILVUS_API_PORT=9000
MINIO_MILVUS_CONSOLE_PORT=9001

# Langfuse (Observability)
LANGFUSE_PORT=3000
LANGFUSE_URL=http://localhost:3000

# Langfuse 보안 키 (최소 32자 이상 필수!)
# 생성: openssl rand -hex 32
LANGFUSE_NEXTAUTH_SECRET=YOUR_SECRET_HERE  # ⚠️ 생성 필요!
LANGFUSE_SALT=YOUR_SALT_HERE  # ⚠️ 생성 필요!
LANGFUSE_ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_HERE  # ⚠️ 생성 필요!

LANGFUSE_TELEMETRY=true
LANGFUSE_EXPERIMENTAL=false

# Langfuse Cloud (옵션)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=https://us.cloud.langfuse.com
LANGFUSE_ENABLED=False

# Clickhouse (Langfuse OLAP)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_HTTP_PORT=8123
CLICKHOUSE_NATIVE_PORT=19000
CLICKHOUSE_USER=clickhouse
CLICKHOUSE_PASSWORD=changeme_clickhouse  # ⚠️ 수정 필요!

# MinIO (Langfuse S3)
MINIO_LANGFUSE_USER=langfuse
MINIO_LANGFUSE_PASSWORD=changeme_langfuse_minio  # ⚠️ 수정 필요!
MINIO_LANGFUSE_API_PORT=9090
MINIO_LANGFUSE_CONSOLE_PORT=9093

# Ollama (로컬 실행)
OLLAMA_PORT=11434
OLLAMA_VERSION=latest
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=hf.co/bartowski/google_gemma-3-12b-it-GGUF:Q4_K_M

# LangChain API
LANGCHAIN_API_HOST=0.0.0.0
LANGCHAIN_API_PORT=8000
API_WORKERS=4
LOG_LEVEL=info

# Open WebUI
OPENWEBUI_PORT=8090
OPENWEBUI_VERSION=latest

# Internal Docker Network (컨테이너 간 통신)
INTERNAL_POSTGRES_HOST=biz-postgres
INTERNAL_MILVUS_HOST=milvus
INTERNAL_REDIS_HOST=redis
INTERNAL_NEO4J_HOST=neo4j
